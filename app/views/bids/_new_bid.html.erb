<% if backer_signed_in? %>
  <%= form_tag fundraiser_bids_path(@fundraiser) do  %>
<article>
  <% if flash[:error].present? %>
    <div id="error_explanation">
      <p><%= flash[:error] %></p>
    </div>
  <% end %>  
  <label class="amount">
    <%= number_field_tag :money_backed %>
  </label>
</article>

<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="A month's subscription"
          data-amount="500"
          data-locale="auto"></script>
<% end %>    
<% else %>
  <%= link_to "Sign in to back this project!", new_backer_session_path, class: 'button expand' %>  
<% end %>  
