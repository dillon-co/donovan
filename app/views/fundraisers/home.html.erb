<div class="row">
  <div class="main">
    <h1><%= @featured_fundraisers.first.title %></h1>
  </div>

  <div class="column">
    <% @featured_fundraisers.each do |fundraiser| %>
      <div class="large-4 columns featured">
        <h3><%= fundraiser.title %></h3>
        <p><%= link_to 'Show Me', fundraiser_path(fundraiser) %></p>
      </div>
    <% end %>
  </div>  
</div>