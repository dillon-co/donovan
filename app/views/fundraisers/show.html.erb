<div class="row">
  <div class="medium-6 columns">
    <img class="thumbnail" src="http://placehold.it/650x350">
    <div class="row small-up-4">
      <div class="column">
        <img class="thumbnail">
      </div>
      <div class="column">
        <img class="thumbnail">
      </div>
      <div class="column">
        <img class="thumbnail">
      </div>
      <div class="column">
        <img class="thumbnail">
      </div>
    </div>
  </div>
  <div class="medium-6 large-5 columns">
    <h2><%= @fundraiser.title %></h2>
    <p><%= @fundraiser.description %></p>
    <h5>We're giving away <%= @fundraiser.equity_given_away %>% for <%= number_to_currency(@fundraiser.goal) %> and we've raised  <%= number_to_currency(@fundraiser.money_raised) %> </h5>
    <% if backer_signed_in? %>
      <%= form_for [@fundraiser, @bid] do |f| %>
        <%= f.label "Your Bid" %>
        <%= f.number_field :money_backed %>
        <%= f.submit 'Back This Company!', class: "button expand" %>
      <% end %>
    <% else %>
      <%= link_to "Sign in to back this project!", new_backer_session_path, class: 'button expand' %>  
    <% end %>  

    <div class="small secondary expand button-group">
      <a class="button small">Facebook</a>
      <a class="button small">Twitter</a>
      <a class="button small">Yo</a>
    </div>
  </div>
</div>
<div class="column row">

</div>